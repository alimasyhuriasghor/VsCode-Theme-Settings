    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                ".\\src\\*.cpp",
                "-o",
                ".\\bin\\a.exe"
            ]
        },
        {
            "label":"run",
            "type": "shell",
            "command":".\\bin\\a",
            "dependsOn":["Compile C++"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}